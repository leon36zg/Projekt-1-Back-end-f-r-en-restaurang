html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style2.css') 
  body
    section.container
      header Leons pizzeria   
      img.logo-image(src='/images/luigilogo-removebg-preview.png' alt='' height='150px' width='260px')
      h1 Registrera dig här! 
      form.form(action='/registration', method="post") 
        .input-box 
          label Användarnamn  
          input(type="text", placeholders="Ange ditt namn", name="username" required="") 
        .input-box 
          label Lösenord
          input(type="password", placeholders="Ange ditt lösenord", name="password" required="")  
        .input-box 
          label Bekräfta ditt lösenord  
          input(type="password", placeholders="Bekräfta ditt lösenord", name="password" required="")  
        .column 
            button(type="sumbit") Bekräfta din registrering 
            p= errorMsg  
        label 
      .container(style='background-color:#f1f1f1')   


      script.
        var password = document.getElementById("password")
        var confirm_password = document.getElementById("confirm-password");

        function validatePassword(){
            if(password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Passwords Don't Match");
            } else {
                confirm_password.setCustomValidity('');
            }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword; 








